<!-- res/drawable/border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 테두리 색상 및 두께 설정 -->
    <solid android:color="#FFFFFF" /> <!-- 내부 배경색 (투명하려면 #00000000) -->
    <stroke
        android:width="0.5dp" android:color="#6200EE" /> <!-- 테두리 색상 -->

    <!-- 모서리 둥글기 설정 (필요할 경우) -->
    <corners android:radius="8dp" /> <!-- 둥글게 설정 -->
</shape>