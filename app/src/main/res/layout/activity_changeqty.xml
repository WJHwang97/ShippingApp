<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="480dp"
    android:layout_height="950dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"

        >

        <TextView

            android:id="@+id/RawDataTitle"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Raw Data:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rfidResult"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:hint="Reading result"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginStart="10dp"
        >
        <TextView
            android:id="@+id/ItemTitle"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Item:"
            android:textSize="15sp"
             />

        <TextView
            android:id="@+id/rfidResultItem"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-5dp"
            android:hint="Show Item"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginStart="10dp"
        >

        <TextView
            android:id="@+id/PLTCodeTitle"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="PLT:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rfidResultPLT"
            android:layout_width="323dp"
            android:layout_height="match_parent"
            android:hint="Pallet Code"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
       >
        <TextView
            android:id="@+id/QTYTitle"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="QTY:"
            android:textSize="15sp"
             />

        <TextView
            android:id="@+id/rfidResultQTY"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:hint="Quantity"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
       >

        <TextView
            android:id="@+id/PartNameTitle"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Part:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rfidResultPart"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:hint="Part Name"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        >

        <TextView
            android:id="@+id/ModelNameTitle"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Model:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rfidResultModel"
            android:layout_width="322dp"
            android:layout_height="50dp"

            android:hint="Model Name"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        >
        <TextView
            android:id="@+id/DateTitle"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Date:"
            android:textSize="15sp"
             />

        <TextView
            android:id="@+id/rfidResultDate"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:hint="Date"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
      >
        <TextView
            android:id="@+id/TimeTitle"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Time:"
            android:textSize="15sp"
             />
        <TextView
            android:id="@+id/rfidResultTime"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="Time"
            android:textSize="20sp"
            android:textStyle="bold"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="456dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_read"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:text="Read RFID"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_init"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:onClick="onClickBtnInit"
            android:text="Clear"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="154dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="#3F51B5"
                android:gravity="center"
                android:text="QTY :"
                android:textColor="#FBFBFB"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNumberQty"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0.8dp"
                android:background="#3F51B5"
                android:ems="10"
                android:hint="Loading Qty.(00)"
                android:inputType="number"
                android:textColor="#FBFBFB"
                android:textColorHint="#FBFBFB"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="#3F51B5"
                android:gravity="center"
                android:text="DATE:"
                android:textColor="#FBFBFB"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0.8dp"
                android:background="#3F51B5"
                android:drawableRight="@android:drawable/ic_menu_my_calendar"
                android:ems="10"
                android:hint="Date(YYYYMMDD)"
                android:inputType="date"
                android:textColor="#FBFBFB"
                android:textColorHint="#FBFBFB"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="00dp"
                android:background="#3F51B5"
                android:gravity="center"
                android:text="Time :"
                android:textColor="#FBFBFB"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTime"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0.8dp"
                android:background="#3F51B5"
                android:drawableRight="@android:drawable/ic_menu_recent_history"
                android:ems="10"
                android:hint="Time(HHmm)"
                android:inputType="time"
                android:textColor="#FBFBFB"
                android:textColorHint="#FBFBFB"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_write"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="44dp"
        android:text="Write RFID"
        android:textSize="18sp" />


</LinearLayout>