<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalesLoadingScan"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="412dp"
            android:layout_height="82dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ShippingNoLabel"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Shipping #"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ShippingNo"
                android:layout_width="171dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/text_view_border"
                android:gravity="center"
                android:hint="Shipping #"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/etc"
                android:layout_width="76dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/text_view_border"
                android:gravity="center"
                android:text=""
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ShipToLabel"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Ship-TO"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ShipTo"
                android:layout_width="260dp"
                android:layout_height="36dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/text_view_border"
                android:gravity="center"
                android:hint="Ship-To"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="57dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TruckNoLabel"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Truck #"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TruckNo"
                android:layout_width="156dp"
                android:layout_height="36dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/text_view_border"
                android:gravity="center"
                android:hint="Truck #"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Manualbutton"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rect_button_background"
                android:layout_weight="1"
                android:text="Manual" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="00dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <!-- 헤더 부분, 사이즈는 그대로 유지 -->
        <LinearLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="430dp"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/PartNo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/cell_shape"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="false"
                android:text="Part"
                android:textSize="15dp" />

            <TextView
                android:id = "@+id/SEQNo"
                android:layout_width = "20dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background = "@drawable/cell_shape"
                android:ellipsize = "end"
                android:padding = "5dp"
                android:text = "No"
                android:textSize = "15dp"
                android:singleLine = "true" />

            <TextView
                android:id = "@+id/InputNo"
                android:layout_width = "20dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background = "@drawable/cell_shape"
                android:ellipsize = "end"
                android:padding = "5dp"
                android:text = "Order"
                android:textSize = "15dp"
                android:singleLine = "false" />

            <TextView
                android:id = "@+id/AutoScan"
                android:layout_width = "20dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background = "@drawable/cell_shape"
                android:ellipsize = "end"
                android:padding = "5dp"
                android:text = "Scan"
                android:textSize = "15dp"
                android:singleLine = "false" />

            <TextView
                android:id="@+id/ManualScan"
                android:layout_width = "20dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:background = "@drawable/cell_shape"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:ellipsize = "end"
                android:padding = "5dp"
                android:text = "Manual"
                android:textSize = "15dp"
                android:singleLine = "false" />
        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="425dp"
            android:layout_height="271dp"
            android:textSize="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/LoadingMSG"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:textSize="18dp"
        android:textColor="#FF0000"
        android:hint="" />

    <LinearLayout
        android:layout_width="430dp"
        android:layout_height="194dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="246dp"
            android:layout_height="179dp"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Vendor"
                android:layout_width="240dp"
                android:layout_height="35dp"
                android:background="@drawable/text_view_border"
                android:text=""
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="none"
                android:imeOptions="actionSend"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="232dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/MESCheck"
                    android:layout_width="95dp"
                    android:layout_height="40dp"
                    android:text="MES"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/RFIDCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:text="RFID"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/ClearScanButton"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rect_button_background"
                android:text="Clear Scan"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/ScanDetailButton"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:background="@drawable/rect_button_background"
                android:gravity="center"
                android:text="Scan Detail"
                android:textSize="18sp" />

            <Button
                android:id="@+id/ConfirmButton"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_button_background"
                android:text="Confirm"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
