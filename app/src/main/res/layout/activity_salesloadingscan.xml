<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/EmpNo"
            android:layout_width="106dp"
            android:layout_height="22dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:hint="Emp No"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="109dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:hint="Name"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/OrderDate"
            android:layout_width="92dp"
            android:layout_height="35dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:text="Order Date"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/CurrentDate"
            android:layout_width="110dp"
            android:layout_height="37dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/text_view_border"
            android:gravity="center"
            android:text="Date"
            android:textSize="18sp" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="100dp"
            android:layout_height="37dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rect_button_background"
            android:text="Search"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView6"
            android:layout_width="63dp"
            android:layout_height="36dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="5dp"
            android:text="Dock #"
            android:textSize="18sp"
            />

        <Spinner
            android:id="@+id/DockSpinner"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/text_view_border"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ShipNOList"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SHIPNO"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/cell_shape"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="false"
            android:text="Ship#"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/DockNo"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/cell_shape"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Dock"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ShipToNo"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/cell_shape"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="false"
            android:text="Ship-To"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TrailerNO"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="false"
            android:text="Trailer"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </LinearLayout>


    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:gravity="center"
        android:textSize="12dp" />


</LinearLayout>
