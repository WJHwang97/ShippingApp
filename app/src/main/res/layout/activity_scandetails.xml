<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalesLoadingScan"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="219dp"
        android:layout_height="59dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/DeleteButton"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="@drawable/rect_button_background"
            android:text="delete"
            android:textSize="18dp" />

        <Button
            android:id="@+id/CloseButton"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rect_button_background"
            android:text="close"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/LOTNOLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOTNO"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/LotNOTextBox"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/text_view_border"
            android:hint="Lot No"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/QTYLabel"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="00dp"
            android:layout_marginTop="0dp"
            android:text="QTY"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/QTYTextBox"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:hint="Quantity"
            android:gravity="center"
            android:layout_marginStart="35dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/text_view_border"
            android:textSize="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width = "fill_parent"
        android:background="@color/black"
        android:layout_height = "50dp"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/LOTNO"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/cell_shape"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="false"
            android:text="LOTNO#"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/EDIPO"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/cell_shape"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="RFID NO"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/QTY"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/cell_shape"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="false"
            android:text="QTY"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

    </LinearLayout>

    <ListView
        android:gravity="center"
        android:id="@+id/LoadList"
        android:layout_width="425dp"
        android:layout_height="339dp" />

</LinearLayout>