<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VendorList">

    <TextView
        android:id="@+id/Vendor"
        android:layout_width="225dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/text_view_border"
        android:gravity="center"
        android:hint="Vendor"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SearchVendor"
        android:layout_width="84dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/rect_button_background"
        android:text="Search"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/Vendor"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SelectVendor"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rect_button_background"
        android:text="Select"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toEndOf="@+id/SearchVendor"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:layout_width="357dp"
        android:layout_height="371dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Vendor"
        app:layout_constraintVertical_bias="0.181" />

</androidx.constraintlayout.widget.ConstraintLayout>